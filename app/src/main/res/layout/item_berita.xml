<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="#F7F9EC">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Gambar Berita (Kiri) -->
        <ImageView
            android:id="@+id/iv_berita_foto"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_article"
            app:tint="#5E4074"
        android:contentDescription="Gambar Berita"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

        <!-- Judul Berita -->
        <TextView
            android:id="@+id/tv_berita_judul"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="OpenAI Mengumumkan Platform untuk..."
            android:textSize="16sp"
            android:textStyle="bold"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginStart="12dp"
            android:textColor="#5E4074"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_berita_foto"
        app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Deskripsi/Sumber Berita -->
        <TextView
            android:id="@+id/tv_berita_sumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="The Verge | 13 Nov 2025"
            android:textSize="12sp"
            android:textColor="#4A335D"
        android:layout_marginTop="4dp"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toBottomOf="@id/tv_berita_judul"
        app:layout_constraintStart_toEndOf="@id/iv_berita_foto"
        app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>