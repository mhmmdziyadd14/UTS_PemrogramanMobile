<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="#F7F9EC"> <!-- Latar Card Putih -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- Circle Image -->
        <androidx.cardview.widget.CardView
            android:layout_width="56dp"
            android:layout_height="56dp"
            app:cardCornerRadius="28dp"
            android:layout_marginEnd="12dp">
            <ImageView
                android:id="@+id/iv_foto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_person"
                app:tint="#5E4074"
            android:scaleType="centerCrop"
            android:background="#F7F9EC"
            android:contentDescription="Foto Kontak"/>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_nama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Kontak"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#5E4074"/> <!-- Teks Ungu -->

            <TextView
                android:id="@+id/tv_telepon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="08xx-xxxx-xxxx"
                android:textSize="14sp"
                android:textColor="#4A335D"/> <!-- Teks Ungu (lebih gelap) -->
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>