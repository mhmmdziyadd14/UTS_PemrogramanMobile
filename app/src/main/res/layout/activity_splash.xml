<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5E4074">



    <androidx.cardview.widget.CardView
        android:id="@+id/card_foto_splash"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:cardCornerRadius="75dp"
    app:cardElevation="8dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toTopOf="@id/tv_title"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintVertical_chainStyle="packed"
    android:layout_marginBottom="32dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/foto_profil"
    android:scaleType="centerCrop"
    android:contentDescription="Foto Profil"/>

</androidx.cardview.widget.CardView>

<TextView
android:id="@+id/tv_title"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="ETS Mobile"
android:textSize="28sp"
android:textStyle="bold"
android:textColor="#F7F9EC"


    android:fontFamily="serif"

    app:layout_constraintTop_toBottomOf="@id/card_foto_splash"
    app:layout_constraintBottom_toTopOf="@id/tv_name"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginBottom="8dp"/>


<TextView
android:id="@+id/tv_name"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Muhammad Ziyad"
android:textSize="18sp"
android:textColor="#F7F9EC"


    android:fontFamily="serif"

    app:layout_constraintTop_toBottomOf="@id/tv_title"
    app:layout_constraintBottom_toTopOf="@id/tv_nim"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginBottom="4dp"/>


<TextView
android:id="@+id/tv_nim"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="152023198"
android:textSize="16sp"
android:textColor="#F7F9EC"


    android:fontFamily="serif"

    app:layout_constraintTop_toBottomOf="@id/tv_name"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginBottom="40dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>