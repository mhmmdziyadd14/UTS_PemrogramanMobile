<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F9EC"
    tools:context=".BiodataFragment">


<TextView
android:id="@+id/tv_header_biodata"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:text="Biodata Diri"
android:textSize="20sp"
android:textStyle="bold"


    android:background="#5E4074"
    android:textColor="#F7F9EC"

    android:paddingHorizontal="16dp"
    android:paddingVertical="12dp"
    app:layout_constraintTop_toTopOf="parent"/>



<ScrollView
android:layout_width="match_parent"
android:layout_height="0dp"
app:layout_constraintTop_toBottomOf="@id/tv_header_biodata"
app:layout_constraintBottom_toBottomOf="parent"
android:fillViewport="true">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Foto Profile (Lingkaran) -->
    <androidx.cardview.widget.CardView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        app:cardCornerRadius="60dp"
        app:cardElevation="8dp"
        android:layout_marginBottom="16dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/foto_profil"
            android:scaleType="centerCrop"
            android:contentDescription="Foto Profil"/>
    </androidx.cardview.widget.CardView>

    <!-- Judul (Ini bisa dihapus jika header atas sudah cukup) -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Biodata Diri"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#5E4074"
        android:fontFamily="serif"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="24dp"/>

    <!-- Form Nama Lengkap -->
    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nama Lengkap"
        android:textColorHint="#5E4074"
        app:boxStrokeColor="#5E4074">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_nama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:textColor="#5E4074"
            android:background="#F7F9EC"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Form Tanggal Lahir (Kalender) -->
    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tanggal Lahir"
        android:textColorHint="#5E4074"
        app:boxStrokeColor="#5E4074"
        android:layout_marginTop="16dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_tgl_lahir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:cursorVisible="false"
            android:drawableEnd="@drawable/ic_calendar"
            android:drawableTint="#5E4074"
            android:textColor="#5E4074"
            android:background="#F7F9EC"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Form Dropdown (Spinner) -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pilih Program Studi"
        android:textColor="#5E4074"
        android:layout_marginTop="16dp"
        android:layout_marginStart="4dp"/>
    <Spinner
        android:id="@+id/spinner_prodi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/spinner_background_outlined"
        android:entries="@array/prodi_array"
        android:padding="16dp"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <!-- Form Radio Button (Contoh) -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jenis Kelamin"
        android:textColor="#5E4074"
        android:layout_marginTop="16dp"
        android:layout_marginStart="4dp"/>
    <RadioGroup
        android:id="@+id/radio_group_jk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/rb_pria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pria"
            android:textColor="#5E4074"/>
        <RadioButton
            android:id="@+id/rb_wanita"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wanita"
            android:textColor="#5E4074"/>
    </RadioGroup>

    <!-- Tombol Simpan -->
    <Button
        android:id="@+id/btn_simpan"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        style="@style/CalcButton.Gray"
        android:text="SIMPAN"
        android:layout_marginTop="32dp"/>

</LinearLayout>
</ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>